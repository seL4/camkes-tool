/*- macro rule_cp(target, dependencies) -*/
/*? target ?*/: /*? dependencies ?*/
	@echo " [CP] $(notdir $@)"
	${Q}mkdir -p $(dir $@)
	${Q}echo "#line 1 \"$<\"" >$@
	${Q}cat "$<" >>"$@"
/*- endmacro -*/

