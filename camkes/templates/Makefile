        ${CAMKES_FLAGS} \
        /*- for inc in options.import_path -*/ --import-path /*? inc ?*/ /*- endfor -*/ \
        --file /*? options.file[0].name ?*/ \
        --item /*? item ?*/ \
        --outfile "$@" \
        --platform /*? platform ?*/
	/*- if preprocessor != None -*/
	@echo " [PP] $(notdir $@)"
	${Q}/*? preprocessor ?*/
	/*- endif -*/
	# Reflow the generated file if it's a C source or header.
	${Q}$(if $(patsubst %.c,,$(patsubst %.h,,/*? target ?*/)),,${FMT} "$@" | ${SPONGE} "$@")
/*- endmacro -*/

