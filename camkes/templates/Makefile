	${Q}${CC} $(CRTOBJFILES) $(filter %.o,$^) $(FINOBJFILES) ${/*? i.name ?*/_instance_LDFLAGS} -o $@
/*- set p = Perspective(group=i.address_space) -*/
/*? p['elf_name'] ?*/: /*? i.name ?*/.instance-copy.bin
